{
  "name": "powerjudge-server",
  "version": "0.0.1",
  "description": "Online judge server",
  "keywords": [
    "judge",
    "judge-server",
    "judge-system"
  ],
  "bin": {
    "powerjudge-server": "./dist/src/bin/powerjudge-server.js"
  },
  "main": "./dist/src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all clean build server",
    "start:dev": "npm-run-all clean --parallel watch:build watch:server --print-label",
    "clean": "rimraf dist",
    "build": "tsc",
    "server": "node ./dist/index.js",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerumc/powerjudge-server.git"
  },
  "author": "powerumc",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/powerumc/powerjudge-server/issues"
  },
  "homepage": "https://github.com/powerumc/powerjudge-server#readme",
  "dependencies": {
    "@microsoft/ts-command-line": "^4.2.3",
    "express": "^4.16.4"
  },
  "devDependencies": {
    "typescript": "^3.3.3",
    "@types/node": "^10.12.24",
    "@types/express": "^4.16.1",
    "rimraf": "^2.6.3",
    "npm-run-all": "^4.1.5",
    "nodemon": "^1.18.9"
  }
}
