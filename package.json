{
  "name": "powerjudge-server",
  "version": "0.0.1",
  "description": "Online judge server",
  "keywords": [
    "judge",
    "judge-server",
    "judge-system"
  ],
  "bin": {
    "powerjudge-server": "./dist/src/bin/powerjudge-server.js"
  },
  "main": "./dist/src/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm-run-all clean build server",
    "start:dev": "npm-run-all clean --parallel watch:build watch:server --print-label",
    "clean": "rimraf dist",
    "build": "tsc",
    "server": "node ./dist/src/main.js",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powerumc/powerjudge-server.git"
  },
  "author": "powerumc",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/powerumc/powerjudge-server/issues"
  },
  "homepage": "https://github.com/powerumc/powerjudge-server#readme",
  "dependencies": {
    "@microsoft/ts-command-line": "^4.2.3",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "3.8.0",
    "debug": "^4.1.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^10.12.24",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.3.3"
  }
}
