{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2016"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "commandlines": ["./src/commandlines"],
      "services": ["./src/services"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/index.ts",
    "./src/bin/powerjudge-server.ts",
    "./tests/index.ts"
  ]
}
