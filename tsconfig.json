{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2016"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@app": ["./src"],
      "@app/command-lines": ["./src/command-lines"],
      "@app/services/configurations": ["./src/services/configurations"],
      "@app/services/logging": ["./src/services/logging"],
      "@app/services/application": ["./src/services/application"],
      "@app/services/docker": ["./src/services/docker"],
      "@app/controllers/apis": ["./src/controllers/apis"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./src/main.ts",
    "./src/bin/powerjudge-server.ts",
    "./tests/index.ts"
  ]
}
